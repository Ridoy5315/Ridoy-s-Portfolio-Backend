generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  password  String
  role      Role     @default(OWNER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  OWNER
  USER
}

model Blog {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  content     String
  file        String
  tags        String[]
  views       Int      @default(0)
  isFeatured  Boolean  @default(false)
  author      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
